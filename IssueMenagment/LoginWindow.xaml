<Window x:Class="IssueMenagment.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IssueMenagment"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="LoginInput" HorizontalAlignment="Left" Margin="225,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345"/>
        <RadioButton x:Name="githubRadio" Content="GitHub" HorizontalAlignment="Left" Margin="40,50,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="gitlubRadio" Content="GitLab" HorizontalAlignment="Left" Margin="40,70,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwdInput" HorizontalAlignment="Left" Margin="225,145,0,0" VerticalAlignment="Top" Width="345"/>
        <Button x:Name="login" Content="Autoryzuj" HorizontalAlignment="Center" VerticalAlignment="Center" Height="38" Width="159" Click="login_Click"/>
        <Label Content="Login:" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top"/>
        <Label Content="Hasło:" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
